generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  username     String        @unique
  password     String
  refreshToken String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  budgets      Budget[]
}

model Transaction {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  date        DateTime
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  owner       User        @relation(fields: [ownerId], references: [id])
  ownerId     String      @db.ObjectId
  conceptItem ConceptItem
}

enum CONCEPT_TYPE {
  incomes
  expenses
}

enum CONCEPT_FREQUENCY {
  ONE_TIME
  DAILY
  MONTHLY
  ANNUALLY
}

model Budget {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   String     @db.ObjectId
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  startDate DateTime
  endDate   DateTime
  incomes   Category[]
  expenses  Category[]


}

type Category {
  name     String //Utilities
  concepts CategoryConcept[]
}

type CategoryConcept {
  name                    String //Internet Provider, Natural Gas, Water
  frequency               CONCEPT_FREQUENCY @default(MONTHLY)
  recurringBudgetAmount   Float
  plannedRecurringAmounts BudgetBucket[]
  actualRecurringAmounts  BudgetBucket[]
}

type BudgetBucket {
  period String
  amount Float
}

type ConceptItem {
  name      String
  type      CONCEPT_TYPE      @default(expenses)
  frequency CONCEPT_FREQUENCY @default(MONTHLY)
}
